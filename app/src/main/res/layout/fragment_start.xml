<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg_start_fragment"
    tools:context=".presentation.ui.fragments.auth_flow.start.StartFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="190dp"
        android:layout_height="146dp"
        android:layout_marginBottom="@dimen/dimen_margin_92"
        android:src="@drawable/ic_mango"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_margin_16"
        android:layout_marginBottom="@dimen/dimen_margin_76"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="@string/btn_txt_login"
            android:textColor="@color/purple"
            app:strokeColor="@color/purple"
            app:strokeWidth="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_margin_12"
            android:text="@string/btn_txt_registration" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>